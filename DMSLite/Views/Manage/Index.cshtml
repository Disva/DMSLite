@model DMSLite.Models.IndexViewModel

<div class="container body-content" id="pagebackground">
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <br />
        <h4>Change Your Account Settings</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Resources.Resources.UI_Password:</dt>
            <dd>
                [
                @if (Model.HasPassword)
            {
                    @Html.ActionLink(Resources.Resources.UI_ChangeYourPassword, "ChangePassword")
                }
                else
                {
                    @Html.ActionLink(Resources.Resources.UI_Create, "SetPassword")
                }
                ]
            </dd>
        </dl>
        @if (this.User.IsInRole("SPS"))
        {
            <h4>@Resources.Resources.UI_SPSAdministrativeTools</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Resources.Resources.UI_DownloadLog:</dt>
                <dd>
                    [
                    @Html.ActionLink(Resources.Resources.UI_DownloadLog, "LogDownload", "Help")
                    ]
                </dd>
                <dt>@Resources.Resources.UI_ManageOrganizations:</dt>
                <dd>
                    [
                    @Html.ActionLink(Resources.Resources.UI_ManageOrganizations, "Index", "Organizations")
                    ]
                </dd>
                <dt>@Resources.Resources.UI_ManageUserRoles:</dt>
                <dd>
                    [
                    @Html.ActionLink(Resources.Resources.UI_ManageUserRoles, "Index", "Roles")
                    ]
                </dd>
            </dl>
        }

        @if (this.User.IsInRole("Admin"))
        {
            <h4>@Resources.Resources.UI_OrganizationAdministrativeTools</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Resources.Resources.UI_RegisterNewUser:</dt>
                <dd>
                    [
                    @Html.ActionLink(Resources.Resources.UI_RegisterNewUser, "Register", "Account")
                    ]
                </dd>
            </dl>
        }

    </div>
</div>
