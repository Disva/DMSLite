@using DMSLite.Entities
@{ 
    var items = Enum.GetNames(typeof(DonorType)).Zip(
            Enum.GetValues(typeof(DonorType)).Cast<int>(), (name, value) =>
                new SelectListItem {
                    Text = name,
                    Value = value.ToString(),
                    Selected = (int)ViewData.Model == value
                });

    var selectList = new SelectList(items, "Value", "Text", ((int)ViewData.Model).ToString());
}
@Html.DropDownList("Type", items, ViewData)