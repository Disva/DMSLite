@model DMSLite.Models.ReceiptFormModel

@{ var id = Guid.NewGuid().ToString(); }

<div id="@id">
    <div class="modal-header">
        <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Print Receipts</h4>
    </div>
    @using (Ajax.BeginForm("ZipReceipts", "Receipt", new AjaxOptions()
    {
        HttpMethod = "get",
        OnComplete = "checkFormatSelect2",
        OnBegin = "showLoadingButton(\"" + id + "\")",
        OnSuccess = "downloadZipFile(this); hideLoadingButton(\"" + id + "\")"
    }
    , new{ @dataType = "application/zip" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-group row">
                @Html.CheckBox("allBatches", false, htmlAttributes: new { @onchange = "toggleBatchSelect(this)"})
                <label>Select all batches</label>
            </div>
            <div class="form-group row">
                @Html.CheckBox("allDonors", false, htmlAttributes: new { @onchange = "toggleDonorSelect(this)" })
                <label>Select all donors</label>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.donors, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.donors, "", new { @class = "text-danger" })
                    <select id="receiptDonors" onchange="checkReceiptButton()" class="donors-selector format-donor-select2" multiple="multiple" style="width:100%;" name="donors"></select>
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.batches, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.batches, "", new { @class = "text-danger" })
                    <select id="receiptBatches" onchange="checkReceiptButton()" class="donors-selector format-closed-batch-select2" multiple="multiple" style="width:100%;" name="batches"></select>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" id="createButton">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary loading-button" disabled="disabled" id="submitReceiptForm" >
                        <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate loading-button-icon"></span>
                        Make Receipts
                    </button>
                </div>
            </div>
        </div>
    }
</div>