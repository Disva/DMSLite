@model DMSLite.Entities.Donor
<div class="showModal bubbleModalPair">
    <div class="bubbleLine modalSibling">
        <div class="bubble leftBubble">
            <div class="btn btn-default" onclick="showModal(this)">
                Pending donor modify <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </div>
        </div>
    </div>
    <div class="modal fade modalContainer" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("_ModifyForm", Model)
            </div>
        </div>
    </div>

</div>
