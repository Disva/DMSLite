@model DMSLite.Models.SimilarDonorModel

<p>Found some similar donors:</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.newDonor.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newDonor.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newDonor.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newDonor.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newDonor.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.newDonor.ReceiptFrequency)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.similarDonors)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptFrequency)
            </td>
        </tr>
    }
</table>

<p>Are you sure you want to add your donor?</p>