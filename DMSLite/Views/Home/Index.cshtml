@{
    ViewBag.Title = Resources.Resources.UI_HomeTitle;
}

<div id="buttonBox" class="row">
    <div class="col-md-2" id="newDonorBtn">
        @Ajax.ActionLink("New Donor", "AddMenu", "Donors", null, new AjaxOptions()
   {
       InsertionMode = InsertionMode.InsertAfter,
       UpdateTargetId = "outputContainer",
       OnComplete = "enableButtonAndCheckShowModal('" + "newDonorBtn" + "')",
       OnBegin = "return bounceInput('" + "newDonorBtn" + "')"
   }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2" id="newDonationBtn">
        @Ajax.ActionLink("New Donation", "AddMenu", "Donation", null, new AjaxOptions()
   {
       InsertionMode = InsertionMode.InsertAfter,
       UpdateTargetId = "outputContainer",
       OnComplete = "enableButtonAndCheckShowModal('" + "newDonationBtn" + "')",
       OnBegin = "return bounceInput('" + "newDonationBtn" + "')"
   }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2" id="newBatchBtn">
        @Ajax.ActionLink("New Batch", "AddMenu", "Batch", null, new AjaxOptions()
   {
       InsertionMode = InsertionMode.InsertAfter,
       UpdateTargetId = "outputContainer",
       OnComplete = "enableButtonAndCheckShowModal('" + "newBatchBtn" + "')",
       OnBegin = "return bounceInput('" + "newBatchBtn" + "')"
   }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2" id="showDonorsbtn">
        @Ajax.ActionLink("Show Donors", "ViewAllDonors", "Donors", null, new AjaxOptions()
   {
       InsertionMode = InsertionMode.InsertAfter,
       UpdateTargetId = "outputContainer",
       OnComplete = "updateContainer()",
       OnBegin = "startLoading()"
   }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2" id="showDonationsbtn">
        @Ajax.ActionLink("Show Donations", "FetchDonations", "Donation", null, new AjaxOptions()
   {
       InsertionMode = InsertionMode.InsertAfter,
       UpdateTargetId = "outputContainer",
       OnComplete = "updateContainer()",
       OnBegin = "startLoading()"
   }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2" id="showBatchesbtn">
        @Ajax.ActionLink("Show Batches", "FetchBatches", "Batch", null, new AjaxOptions()
   {
       InsertionMode = InsertionMode.InsertAfter,
       UpdateTargetId = "outputContainer",
       OnComplete = "updateContainer()",
       OnBegin = "startLoading()"
   }, new { @class = "btn btn-default" })
    </div>
</div>

<div id="outputOuter" class="row content-box">
    <div class="col-md-12" id="outputContainer">
        <br />
        <div class="bubbleLine"><div class="robotlogo"><i class="fa fa-android" aria-hidden="true"></i></div><div class="bubble leftBubble">@Resources.Resources.Bot_Welcome1<br />@Resources.Resources.Bot_Welcome2</div></div>
        <div class="bubbleLine"><div class="robotlogo"><i class="fa fa-android" aria-hidden="true"></i></div><div class="bubble leftBubble">@Resources.Resources.Bot_Welcome3</div></div>
    </div>
</div>

@using (Ajax.BeginForm("SendInput", new AjaxOptions()
{
    InsertionMode = InsertionMode.InsertAfter,
    UpdateTargetId = "outputContainer",
    OnSuccess = "updateContainer",
    OnBegin = "startLoading",
    OnFailure = "ajaxFailure"
}))
{
<div class="sticky-footer">
    <div class="container">
        <div class="row">
            <div class="form-group">
                <div id="flagInvalidContainer">
                    @Ajax.ActionLink(Resources.Resources.UI_HelpButton, "Log", "Help", null)
                </div>
                <div id="mainInputGroup" class="input-group">
                    <div id="search-container">
                        <input type="text" disabled="disabled" id="suggestion" />
                        @Html.TextBox("mainInput", null, new { @class = "form-control", @autocomplete = "off", @placeholder = Resources.Resources.Bot_Thinking })
                    </div>
                    <span class="input-group-btn">
                        <input id="submitBtn" class="btn btn-default" type="submit" value="@Resources.Resources.UI_Send" />
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
}

@Scripts.Render("~/bundles/home")
@Scripts.Render("~/bundles/suggestionBar")